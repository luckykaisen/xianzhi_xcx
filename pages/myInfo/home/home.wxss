/* pages/myInfo/home/home.wxss */

.home-container {
  display: flex;
  flex-direction: column;
  width: 100%;
}

.info{
  margin: 40rpx 0 0 60rpx;
}

.info text{
  margin-left: 40rpx;
  font-size: 38rpx;
  color: #645764;
}

.info image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 100rpx;
  vertical-align: middle;
}

.btn{
  margin-top: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
}

.btn button {
  width: 100%;
  margin-top: 20rpx;
  background-color: white;
  font-size: 34rpx;
  font-weight: 50rpx;
}

.logout{
  font-weight: bold;
}

.line{
  margin-top: 30rpx;
  height: 1rpx;
  background-color: #eee;
}